@model CapstoneProjectFrancesco.Models.Aziende

@{
    ViewBag.Title = "Details";
}


<!--Main layout-->
<main class="mt-5 pt-4">
    <div class="container mt-5">
        <!--Grid row-->
        <!--Grid row-->
        <div class="row justify-content-between">
            <!--Grid column-->
            <div class="col-lg-4 col-md-12 mb-4">
                <img src="~/Content/FileUpload/@Model.LogoAzienda" class="img-fluid" alt="Logo-azienda" />
            </div>
            <!--Grid column-->
            <!--Grid column-->
            <!--Grid column-->
            <!--Grid column-->
            <div class="col-lg-4 col-md-6 mb-4">
                <h2 class="text-black text-center mb-5">Dettagli azienda</h2>
                <!--Azienda-->
                <h3 class="text-black">Azienda</h3>
                <span class="text-muted fs-4">- @Model.NomeAzienda</span>
                <!------------------------------------------------------------->
                <!--Categoria-->
                <h3 class="text-black mt-2">Indirizzo</h3>
                <span class="text-muted fs-4">- @Model.IndirizzoAzienda</span>
                <!------------------------------------------------------------->
                <!--Nome Prodotto-->
                <h3 class="text-black mt-2">Recapito</h3>
                <span class="text-muted fs-4">- @Model.RecapitoAzienda</span>
                <!------------------------------------------------------------->
            </div>
            <!--Grid column-->
        </div>
        <!--Grid row-->
        <!--Grid row-->
        <div class="row d-flex justify-content-center">
            <div class="col-md-6 text-center">
                <p>
                    @Html.ActionLink("Modifica", "Edit", new { id = Model.IdAzienda }, new { @class = "btn btn-warning" })
                    @Html.ActionLink("Elimina", "Delete", new { id = Model.IdAzienda }, new { @class = "btn btn-danger" })
                    @Html.ActionLink("Indietro", "Index", "", new { @class = "btn btn-dark" })
                </p>
            </div>
        </div>
    </div>
</main>
<!--Main layout-->
