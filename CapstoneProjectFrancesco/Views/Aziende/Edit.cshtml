@model CapstoneProjectFrancesco.Models.Aziende

@{
    ViewBag.Title = "Edit";
}

<h2 class="text-center mt-5 mb-5 text-black fw-bold">Modifica dati aziende</h2>

@using (Html.BeginForm("Edit", "Aziende", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.IdAzienda)
<div class="container">
    <div class="row mb-5 mt-5">
