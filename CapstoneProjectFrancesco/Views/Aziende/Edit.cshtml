                    @Html.ValidationMessageFor(model => model.LogoAzienda, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Salva modifiche" class="btn btn-warning" />
                <span class="ms-1">@Html.ActionLink("Indietro", "Index", "", new { @class = "btn btn-dark" })</span>
            </div>
            <div class="d-flex justify-content-end">
                <p class="text-black fw-bold">( * ) Campi obbligatori</p>
                <br />
            </div>
            <div class="d-flex justify-content-end">
                <p class="text-muted fw-bold">(opzionale) Se lasciati vuoti verrano caricati di default dei placeholder.</p>
            </div>
        </div>
    </div>
