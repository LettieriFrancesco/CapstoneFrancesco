            </div>
        </div>
            <div class="col">
                <div class="form-outline">
                    @Html.EditorFor(model => model.DescrizioneAzienda, new { htmlAttributes = new { @class = "form-control", id = "DescrizioneAzienda" } })
                    @Html.ValidationMessageFor(model => model.DescrizioneAzienda, "", new { @class = "text-danger" })
                    <label class="form-label text-black fw-bold p-0" for="DescrizioneAzienda">Descrizione Azienda</label>
                </div>
            </div>
    </div>

        <div class="row mb-5">
            <div class="col">
                <label>Foto Azienda <small>(opzionale)</small></label>
                <div class="form-outline">
                    @Html.EditorFor(model => model.FotoAzienda, new { htmlAttributes = new { @class = "form-control fw-bold text-black", id = "FotoAzienda", type = "file" } })
                    @Html.ValidationMessageFor(model => model.FotoAzienda, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="col">
                <label>Logo Azienda <small>(opzionale)</small></label>
