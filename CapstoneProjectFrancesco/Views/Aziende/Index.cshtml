@model IEnumerable<CapstoneProjectFrancesco.Models.Aziende>

@{
    ViewBag.Title = "Index";
}
@section Styles{
    <link href="~/Content/stileAziendeAdmin.css" rel="stylesheet" />
}
<h2 class="text-center mt-5 mb-5 text-black fw-bold">Aziende</h2>
@if (TempData["AziendaMoficicata"] != null)
{
    <div class="alert alert-success w-50 mx-auto text-center m-4 fw-bold fs-5">@TempData["AziendaMoficicata"]</div>
}
<p class="ms-3">
    @Html.ActionLink("Registra azienda", "Create", "", new { @class = "btn btn-warning" })
</p>

<div class="container">
    <div class="row">
        @foreach (var a in Model)
        {

            <div class="col-12 col-md-6 col-lg-4 col-xl-3 mb-5 ">
                <a href="@Url.Action("Details", new { id = a.IdAzienda })">

                    <div class="card h-100 d-flex border border-warning hover">
                        <div class="card-body d-flex flex-column justify-content-center align-items-center">
                            <h5 class="card-title text-black text-center">@a.NomeAzienda</h5>
                            <img src="~/Content/FileUpload/@a.LogoAzienda" style="width:120px;" />
                        </div>
                    </div>
                </a>
            </div>

        }
    </div>
</div>
