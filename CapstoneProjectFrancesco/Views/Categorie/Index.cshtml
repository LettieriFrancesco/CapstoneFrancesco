@model IEnumerable<CapstoneProjectFrancesco.Models.Categorie>

@{
    ViewBag.Title = "Index";
}
@section Styles{
    <link href="~/Content/stileAziendeAdmin.css" rel="stylesheet" />
}
<h2 class="text-center mt-5 mb-5 text-black fw-bold">Categorie Prodotti</h2>
@if (TempData["EliminataCategoria"] != null)
{
    <div class="alert alert-success w-50 mx-auto text-center m-4 fw-bold fs-5">@TempData["EliminataCategoria"]</div>
}
<p class="ms-3">
    @Html.ActionLink("Aggiungi categoria", "Create", "", new { @class = "btn btn-warning" })
</p>

<div class="container">
    <div class="row">
        @foreach (var a in Model)
        {

            <div class="col-12 col-md-6 col-lg-4 col-xl-3 mb-5 ">
                <div class="card h-100 d-flex border border-warning hover">
                    <div class="card-body d-flex flex-column justify-content-center align-items-center">
                        <h5 class="card-title text-black text-center">@a.CategoriaProdotto</h5>
                        <div>
                            <a class="me-3 text-secondary" href="@Url.Action("Edit", new {id= a.IdCategoria})"><i class="fa-regular fa-pen-to-square"></i>Modifica</a>
                            <a class="text-danger" href="@Url.Action("Delete", new {id= a.IdCategoria})"><i class="fa-solid fa-trash-can"></i>Elimina</a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
