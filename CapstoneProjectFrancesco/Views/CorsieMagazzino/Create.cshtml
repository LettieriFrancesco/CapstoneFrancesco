@model CapstoneProjectFrancesco.Models.Corsie_Magazzino

@{
    ViewBag.Title = "Create";
}

<h2 class="text-center mt-5 mb-5 text-black fw-bold">Registra corsia</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
<div class="container">
    <div class="row mb-4">
        <div class="col">
            <div class="form-outline">
                @Html.EditorFor(model => model.DescrizioneCorsia, new { htmlAttributes = new { @class = "form-control", id = "DescrizioneCorsia" } })
                @Html.ValidationMessageFor(model => model.DescrizioneCorsia, "", new { @class = "text-danger" })
                <label class="form-label text-black p-0 fw-bold" for="DescrizioneCorsia">Descrizione corsia*</label>
            </div>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10 d-flex justify-content-start">
            <input type="submit" value="Registra" class="btn btn-warning" />
            <div>
                @Html.ActionLink("Indietro", "Index", "", new { @class = "btn btn-dark ms-2" })
            </div>
        </div>
        <div class="d-flex justify-content-end">
            <p class="text-black fw-bold">( * ) Campi obbligatori</p>
        </div>
    </div>
</div>
}
