                        <a href="@Url.Action("Details", new { id = p.IdProdotto })" class="btn btn-warning product-view"><i class="fa fa-search"></i></a>
                        @*<a href="#" class="product-view"><i class="fa fa-search"></i></a>*@
                    </div>
                    <div class="product-content">
                        <h3 class="title text-center text-truncate fw-bold"><a href="@Url.Action("Details",new {id = p.IdProdotto})">@p.NomeProdotto</a></h3>
