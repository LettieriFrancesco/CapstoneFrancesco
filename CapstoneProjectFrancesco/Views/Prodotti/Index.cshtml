@model List<CapstoneProjectFrancesco.Models.Prodotti>

@{
    ViewBag.Title = "Index";
}
@section Styles{
    <link href="~/Content/StileAdminProdotti.css" rel="stylesheet" />
}

<h2 class="text-center mt-5 mb-5 text-black fw-bold">Prodotti</h2>

<p class="ms-3">
    @Html.ActionLink("Registra prodotto", "Create", "", new { @class = "btn btn-warning" })
</p>
@if (TempData["EliminaCategoria"] != null)
{
    <div>
        <p class="alert alert-secondary">@TempData["EliminaCategoria"]</p>
    </div>
}
@if (TempData["EliminaProdotto"] != null)
{
    <div class="alert alert-success w-50 mx-auto text-center m-4 fw-bold fs-5">@TempData["EliminaProdotto"]</div>
}

@if (TempData["ErroreEliminazione"] != null)
{
    <div class="alert alert-danger w-50 mx-auto text-center m-4 fw-bold fs-5">@TempData["ErroreEliminazione"]</div>
}
@if (TempData["ProdottoAggiunto"] != null)
{
    <div class="alert alert-success w-50 mx-auto text-center m-4 fw-bold fs-5">@TempData["ProdottoAggiunto"]</div>
}
@if (TempData["ProdottoModificato"] != null)
{
    <div class="alert alert-success w-50 mx-auto text-center m-4 fw-bold fs-5">@TempData["ProdottoModificato"]</div>
}


