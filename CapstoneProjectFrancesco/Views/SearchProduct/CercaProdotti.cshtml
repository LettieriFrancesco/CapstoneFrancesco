@model List<CapstoneProjectFrancesco.Models.Prodotti>

@{
    ViewBag.Title = "Risultati della ricerca";
}
@section Styles{
    <link href="~/Content/StyleSheet1.css" rel="stylesheet" />
    <link href="~/Content/StileFormSearch.css" />
}

<h2 class="text-center mt-3">Cerca qui il tuo prodotto</h2>

@using (Html.BeginForm("CercaProdotti", "SearchProduct", FormMethod.Get))
{
    <div class="form-group d-flex justify-content-center mt-5">
            <label for="ricerca">Ricerca prodotti:</label>
            <input type="text" name="ricerca" id="ricerca" value="@ViewBag.Ricerca" class="form-control" />
        <button type="submit" class="btn btn-default">Cerca</button>
        </div>
