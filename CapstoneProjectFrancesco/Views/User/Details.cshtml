@model CapstoneProjectFrancesco.Models.Prodotti

@{
    ViewBag.Title = "Details";
}

<a class="fs-3 ms-3 text-black" href="/Home/Index"><i class="fa-solid fa-arrow-left-long"></i></a>
<div class="container">
    <div class="row mt-5">
        <div class="col-12 col-md-5">
            <!-- Carousel wrapper -->
            <div id="carouselExampleSlidesOnly" class="carousel slide" data-mdb-ride="carousel">
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <img src="~/Content/FileUpload/@Model.FotoProdotto1" class="d-block w-100" alt="Wild Landscape" />
                    </div>
                    <div class="carousel-item">
                        <img src="~/Content/FileUpload/@Model.FotoProdotto2" class="d-block w-100" alt="Wild Landscape" />
                    </div>
                </div>
            </div>
            <!-- Carousel wrapper -->
        </div>
        <div class="col-12 col-md-7">
            <div class="row">
                <div class="col-6">
                    <h3>Prodotto</h3>
                    <p class="fs-4">@Model.NomeProdotto</p>
                </div>
                @*<div class="col-4">
                        <h3><strong>Azienda</strong></h3>
                        <p>@Model.Aziende.NomeAzienda</p>
                    </div>*@
                <div class="col-6">
                    <img style="width:200px;" src="~/Content/FileUpload/@Model.Aziende.LogoAzienda" />
                </div>
            </div>
            <div class="row mt-3">
                <div class="col-6">
                    <h3>Prezzo</h3>
                    <p class="fs-4">@Model.Prezzo.ToString("C")</p>
                </div>

                <div class="col-6">
                    <h3>Ingredienti</h3>
                    <p>@Model.Ingredienti</p>
                </div>

            </div>
            <div>
                @Html.HiddenFor(m => m.IdProdotto)
                @using (Html.BeginForm("Carrello", "User", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()
                    <label class="fw-bold text-danger" for="Quantita">Quantita:</label>
                    <input class="form-control" type="number" id="Quantita" name="Quantita" value="1" min="1" />
                    <input type="submit" class="mt-3 btn btn-danger" value="Aggiungi al carrello" />
                }
            </div>
            <div class="mt-5">
                <h3>Descrizione</h3>
                <p>@Model.DescrizioneProdotto</p>
            </div>
        </div>
    </div>
</div>
<div class="container">
    <div class="row">
        <div class="col-12">
            <h1 class="text-center">@Model.Aziende.NomeAzienda</h1>
            <p>@Model.Aziende.DescrizioneAzienda</p>
        </div>
    </div>
</div>
@*<p>
        @Html.ActionLink("Edit", "Edit", new { id = Model.IdProdotto }) |
        @Html.ActionLink("Back to List", "Index")
    </p>*@

